<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Order id</th>
      <th>Product id</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.id %></td>
        <td><%= order_item.order.number %></td>
        <td><%= order_item.product.name %></td>
        <td><%= order_item.qty %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
  Total Price <%= @order_sum %>
<br>
<br>
<%= link_to 'Back', '/orders' %>
